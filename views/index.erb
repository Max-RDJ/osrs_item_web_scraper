<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OSRS Item Scraper</title>
  <link rel="stylesheet" href="styles1.9.css">
</head>

<body>

<div id="page-title">
  <h1>OSRS Item Price Scraper</h1>
</div>

<div id="columns-container">

<div class="column">
<fieldset id="search-box">
    <legend id="search-title">Item Search</legend>
    <input type="text" id="itemDescription" placeholder="e.g. mithril platebody">
    <button onclick="searchItem()" id="search-btn">Search</button>
    <div id="results-error">No results found.</div>
</fieldset>

  <div class="item-container" draggable="true" id="item-1">
    <h2 class="resultName"></h2>
    <p class="resultPrice"></p>
  </div>

  <div class="item-container" draggable="true" id="item-2">
    <h2 class="resultName"></h2>
    <p class="resultPrice"></p>
  </div>

  <div class="item-container" draggable="true" id="item-3">
    <h2 class="resultName"></h2>
    <p class="resultPrice"></p>
  </div>
  
</div>

<div class="column">
  <div id="profit-title-container">
    <h2 id="profit-title">Profit calculator</h2>
  </div>

  <div id="calc-items-container">

    <div id="items-purchased">Items to purchase
      <div class="drop-zone"><span class="drop-text" id="first-calc-item">Drag & drop here</span></div>
      <div class="drop-zone"><span class="drop-text" id="second-calc-item">Drag & drop here</span></div>
    </div>

    <div id="items-sold">Items to sell
      <div class="drop-zone"><span class="drop-text" id="third-calc-item">Drag & drop here</span></div>
      <div class="drop-zone"><span class="drop-text" id="fourth-calc-item">Drag & drop here</span></div>

    </div>

  </div>
</div>

</div>

  <script>
    const itemContainers = document.querySelectorAll(".item-container");
    const dropZones = document.querySelectorAll(".drop-zone");
    const dropText = document.querySelectorAll(".drop-text");
    const resultNames = document.querySelectorAll(".resultName");
    const resultPrices = document.querySelectorAll(".resultPrice");
    const resultsError = document.getElementById("results-error");
    const input = document.getElementById("itemDescription");

    input.addEventListener("keypress", function(event) {
      
      if (event.key === "Enter") {
        event.preventDefault();
        document.getElementById("search-btn").click();
      }
    });

    function searchItem() {
  const itemDescription = document.getElementById("itemDescription").value;

  fetch(`/search?itemDescription=${encodeURIComponent(itemDescription)}`)
    .then(response => response.json())
    .then(data => {
      console.log("Full fetched data:", data);  // Log the full response for verification

      // Check if `data` contains the expected properties directly
      if (data.error) {
        document.getElementById("results-error").style.display = "block";
      } else if (data.item_name && data.price) {  // Verify `item_name` and `price` are present
        document.getElementById("results-error").style.display = "none";

        // Update the first `.resultName` and `#resultPrice` with the fetched data
        document.querySelector('.resultName').innerText = data.item_name;
        document.querySelector('.resultPrice').innerText = `Price: ${data.price}`;
      } else {
        console.error("Unexpected data format:", data);  // Log unexpected format
        document.getElementById("results-error").style.display = "block";
      }
    })
    .catch(error => {
      console.error("Fetch error:", error);  // Log any fetch errors
      document.getElementById("results-error").style.display = "block";
    });
}



            
            
            // document.querySelector('.resultName').innerText = data.item_name;
            // document.getElementById('resultPrice').innerText = `Price: ${data.price}`;

  itemContainers.forEach(container => {
        container.addEventListener("dragstart", function(event) {
        event.dataTransfer.setData("text/plain", event.target.id);
      });
    });
    // itemContainer.addEventListener("dragstart", function(event) {
    //   console.log(event)
    // })

    dropZones.forEach(zone => {
      zone.addEventListener("dragover", function(event) {
      event.preventDefault();
    });
  
    zone.addEventListener("drop", function(event) {
      event.preventDefault();
      const draggedItemId = event.dataTransfer.getData("text");
      const draggedItem = document.getElementById(draggedItemId);

      if (draggedItem) {
        zone.appendChild(draggedItem);

      const dropText = zone.querySelector(".drop-text");
      if (dropText) {
        dropText.style.display = "none";
      }
    }
  });
});


  </script>
</body>
</html>